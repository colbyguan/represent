<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.colby.represent.RepActivity"
    tools:deviceIds="wear_round">

    <ImageView
        android:id="@+id/profile"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/initial_profile"/>


    <RelativeLayout
        android:layout_height="70dp"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rep_background"
        android:layout_alignParentBottom="true"
        android:alpha="0.95"
        android:id="@+id/repPadding"
        android:layout_marginBottom="20dp">

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:textColor="#4F4F4F"
            android:text="Senator"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:id="@+id/name"
            android:textColor="#4F4F4F"
            android:textStyle="bold"
            android:text="Nancy Pelosi"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/party"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_democrat"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65dp"
        android:layout_marginRight="16dp"/>


</RelativeLayout>
