<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.colby.represent.DetailActivity"
    tools:showIn="@layout/activity_detail">

    <include layout="@layout/rep_header"
        android:id="@+id/header"/>

    <View
        android:id="@+id/timeline"
        android:layout_width="2dp"
        android:layout_height="340dp"
        android:layout_below="@id/header"
        android:layout_marginTop="-16dp"
        android:background="#0372FC"
        android:layout_marginLeft="48dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Minority Leader - no committees"
        android:textStyle="bold"
        android:id="@+id/cmts"
        android:textColor="#BDBDBD"
        android:layout_below="@id/header"
        android:layout_toRightOf="@id/timeline"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="-8dp"
        android:layout_alignEnd="@+id/header" />

    <ImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/endMarker"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_blank"
        android:layout_below="@id/cmts"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Jan. 3 - 2017 - End of term"
        android:textStyle="bold"
        android:id="@+id/endDate"
        android:textColor="#828282"
        android:layout_alignTop="@id/endMarker"
        android:layout_toRightOf="@id/endMarker"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"/>

    <ImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/check1"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_bill"
        android:background="#FFFFFF"
        android:layout_below="@id/endMarker"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Nov. 5 - 2015 - National Defense Authorization Act for Fiscal Year 2016"
        android:textStyle="bold"
        android:id="@+id/bill1"
        android:textColor="#828282"
        android:layout_alignTop="@id/check1"
        android:layout_toRightOf="@id/check1"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"/>

    <ImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/check2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_bill"
        android:background="#FFFFFF"
        android:layout_below="@id/check1"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Jun. 25 - 2015 -Trade Preferences Extension Act"
        android:textStyle="bold"
        android:id="@+id/bill2"
        android:textColor="#828282"
        android:layout_alignTop="@id/check2"
        android:layout_toRightOf="@id/check2"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"/>

    <ImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/check3"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_bill"
        android:background="#FFFFFF"
        android:layout_below="@id/check2"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="May 14 - 2015 - Iran Nuclear Agreement Review Act of 2015"
        android:textStyle="bold"
        android:id="@+id/bill3"
        android:textColor="#828282"
        android:layout_alignTop="@id/check3"
        android:layout_toRightOf="@id/check3"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"/>


</RelativeLayout>
